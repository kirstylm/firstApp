{{outlet}}
<div class="jumbotron">
  <h2 class="text-center">This is the examples page!</h2>
</div>
<div class="container">
  {{#if showList}}
  <h2 class="text-center"><code>showList</code> is set to true!</h2>
  <button class="btn btn-default" {{action 'hide'}}>Hide</button>
  <ul>
    {{#each people as |person|}}
    <li>{{person.name}}</li>
    <ul>
      <li>{{person.age}}</li>
      <li>{{person.alias}}</li>
      <li>{{person.hometown}}</li>
    </ul>
    {{/each}}
  </ul>
  {{else}}
  <h2 class="text-center"><code>showList</code> is set to false!</h2>
  <button class="btn btn-default" {{action 'show'}}>Show</button>
  {{/if}}
</div>

{{outlet}}
<div class="jumbotron">
  <h2 class="text-center">Add a Todo!</h2>
</div>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
<div class="panel panel-default">
  <div class="panel-heading">
  <label for="Todo">Add a Todo!</label>
  {{input value=name placeholder="Add a Todo"}}
    <button class="btn btn-default" {{action "createTodo"}}>Publish</button>
  </div>
  {{#each model as |todo|}}
    <div class="panel-body">
    <ul>
  <li>{{todo.name}}</li>
  </ul>
    </div>
  {{/each}}
    </div>
  </div>
</div>